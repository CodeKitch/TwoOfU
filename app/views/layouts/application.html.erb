<!DOCTYPE html>
<html>
  <head>
    <title>TwoOfU</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div>
  <% if logged_in? %>
    <%= link_to 'Home', user_path(current_user) %> |
    <%= link_to 'Performance Types', categories_path %> |
    <%= link_to 'Logout', logout_path, method: 'delete' %>
  <br>
  <br>
    <%= link_to 'Add Trick', new_trick_path %> |
    <%= link_to 'All Tricks', tricks_path %> |
    <%= link_to 'My Tricks', user_tricks_path(current_user) %> 
  <br>
  <br>
    <%= link_to 'Add a Tip', new_tip_path %> |
    <%= link_to 'All Tips', tips_path %> |
    
   
    <% else %>
    <%= link_to  'Sign Up', signup_path %> |
    <%= link_to  'Log In', login_path %>
    <%= button_to "Log in with Google", '/auth/google_oauth2' %>
    <% end %>

  </div>

  <div>
    <% if flash[:message] %>
      <%= flash[:message]%>
    <% end %>
  <%= @error%>
  </div>

    <%= yield %>
  </body>
</html>